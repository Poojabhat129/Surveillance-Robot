<?xml version="1.0"?>
<robot name="survo" xmlns:xacro="http://www.ros.org/wiki/xacro">
   <property name="M_PI" value="3.1415926535897931" />
  <property name="ground_clearance" value="0.0762" />

  <xacro:include filename="$(find survo_description)/urdf/materials.urdf.xacro" />



  <property name="chassis_length" value="0.4572" />
  <property name="chassis_width" value="0.381" />
  <property name="chassis_height" value="0.1778" />
  <property name="chassis_mass" value="6" />
  <property name="wheel_mass" value="1.5" />
  <property name="wheel_radius" value="0.2032" />
  <property name="wheel_width" value="0.0635" />

  <gazebo>
    <plugin name="grizzly_diff_controller"
            filename="libgrizzly_gazebo_plugins.so">
      <alwaysOn>true</alwaysOn>
      <updateRate>100.0</updateRate>
      <rearLeftJoint>rear_left_wheel_joint</rearLeftJoint>
      <rearRightJoint>rear_right_wheel_joint</rearRightJoint>
      <frontLeftJoint>front_left_wheel_joint</frontLeftJoint>
      <frontRightJoint>front_right_wheel_joint</frontRightJoint>
      <wheelSeparation>${0.1394*2}</wheelSeparation>
      <wheelDiameter>${0.2032*2.0}</wheelDiameter>
      <torque>100</torque>
    </plugin>
  </gazebo>


  <link name="base_link" />

  <link name="chassis_link">
    <inertial>
      <mass value="${chassis_mass}"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="1.000000" ixy="0.000016" ixz="0.000000"
               iyy="-0.000016" iyz="0.000000" izz="0.000000" />
    </inertial>
    <visual>
      <origin xyz="0 0 ${ground_clearance}"
              rpy="${M_PI/2}  0  0" />
      <geometry>
        <mesh filename="package://survo_description/meshes/base_link.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="White" />
    </visual>
    <collision>
      <origin xyz="0 0 ${ground_clearance}"
              rpy="${M_PI/2} 0 ${M_PI/2}" />
      <geometry>
         <box size="${chassis_width} ${chassis_height} ${chassis_length}" />
      </geometry>
    </collision>
  </link>
  <joint name="chassis_joint"
         type="fixed">
    <origin xyz="0 0 ${ground_clearance}"
            rpy="0 0 0"/>
    <parent link="base_link" />
    <child link="chassis_link" />
  </joint>

  <link name="front_left_wheel">
     <inertial>
        <mass value="${wheel_mass}" />
        <origin xyz="0 0 0" />
        <inertia ixx="1.000000" ixy="0.000000" ixz="-0.000001"
                       iyy="0.000000" iyz="0.347906" izz="0.000001" />
     </inertial>
     <visual>
       <origin xyz="0 0 0"
               rpy="0 0 0" />
       <geometry>
         <mesh filename="package://survo_description/meshes/wheel.stl" scale="0.001 0.001 0.001" />
       </geometry>
       <material name="DarkGrey" />
     </visual>
     <collision>
       <origin xyz="0 0 0"
               rpy="${M_PI/2} 0 0" />
       <geometry>
         <cylinder length="${wheel_width}"
                   radius="${wheel_radius}" />
       </geometry>
     </collision>
  </link>
   <gazebo reference="front_left_wheel">
     <mu1 value="1.0" />
     <mu2 value="1.0" />
     <kp value="10000000.0" />
     <kd value="1.0" />
     <fdir1 value="1 0 0" />
     <material>Gazebo/DarkGrey</material>
     <turnGravityOff>false</turnGravityOff>
     <selfCollide>true</selfCollide>
   </gazebo>
   <joint name="front_left_wheel_joint"
          type="continuous">
     <parent link="chassis_link" />
     <child link="front_left_wheel" />
     <origin xyz="0.1394 0.23495 0.0183"
             rpy="${M_PI/2} 0 0" />

     <axis xyz="0 0 1"
           rpy="0 0 0" />
     <limit effort="100"
            velocity="100" />
     <joint_properties damping="0.0"
                       friction="0.0" />
   </joint>

   <link name="front_right_wheel">
      <inertial>
         <mass value="${wheel_mass}" />
         <origin xyz="0 0 0" />
         <inertia ixx="1.000000" ixy="0.000000" ixz="-0.000001"
                        iyy="0.000000" iyz="0.347906" izz="0.000001" />
      </inertial>
      <visual>
        <origin xyz="0 0 0"
                rpy="0 0 0" />
        <geometry>
          <mesh filename="package://survo_description/meshes/wheel.stl" scale="0.001 0.001 0.001" />
        </geometry>
        <material name="DarkGrey" />
      </visual>
      <collision>
        <origin xyz="0 0 0"
                rpy="0 0 ${M_PI/2}" />
        <geometry>
          <cylinder length="${wheel_width}"
                    radius="${wheel_radius}" />
        </geometry>
      </collision>
    </link>
    <gazebo reference="front_right_wheel">
      <mu1 value="1.0" />
      <mu2 value="1.0" />
      <kp value="10000000.0" />
      <kd value="1.0" />
      <fdir1 value="1 0 0" />
      <material>Gazebo/DarkGrey</material>
      <turnGravityOff>false</turnGravityOff>
      <selfCollide>true</selfCollide>
    </gazebo>
    <joint name="front_right_wheel_joint"
           type="continuous">
      <parent link="chassis_link" />
      <child link="front_right_wheel" />
      <origin xyz="-0.1394 0.23495 0.0183"
              rpy="${M_PI/2} 0 0" />
      <axis xyz="0 0 1"
            rpy="0 0 0" />
      <limit effort="100"
             velocity="100" />
      <joint_properties damping="0.0"
                        friction="0.0" />
    </joint>


    <link name="rear_left_wheel">
       <inertial>
          <mass value="${wheel_mass}" />
          <origin xyz="0 0 0" />
          <inertia ixx="1.000000" ixy="0.000000" ixz="-0.000001"
                         iyy="0.000000" iyz="0.347906" izz="0.000001" />
       </inertial>
       <visual>
         <origin xyz="0 0 0"
                 rpy="0 0 0" />
         <geometry>
           <mesh filename="package://survo_description/meshes/wheel.stl" scale="0.001 0.001 0.001" />
         </geometry>
         <material name="DarkGrey" />
       </visual>
       <collision>
         <origin xyz="0 0 0"
                 rpy="${M_PI/2} 0 0" />
         <geometry>
           <cylinder length="${wheel_width}"
                     radius="${wheel_radius}" />
         </geometry>
       </collision>
     </link>
     <gazebo reference="rear_left_wheel">
       <mu1 value="1.0" />
       <mu2 value="1.0" />
       <kp value="10000000.0" />
       <kd value="1.0" />
       <fdir1 value="1 0 0" />
       <material>Gazebo/DarkGrey</material>
       <turnGravityOff>false</turnGravityOff>
       <selfCollide>true</selfCollide>
     </gazebo>
     <joint name="rear_left_wheel_joint"
            type="continuous">
       <parent link="chassis_link" />
       <child link="rear_left_wheel" />
       <origin xyz="0.1394 -0.23495 0.0183"
               rpy="${M_PI/2} 0 0" />
       <axis xyz="0 0 1"
             rpy="0 0 0" />
       <limit effort="100"
              velocity="100" />
       <joint_properties damping="0.0"
                         friction="0.0" />
     </joint>

     <link name="rear_right_wheel">
        <inertial>
           <mass value="${wheel_mass}" />
           <origin xyz="0 0 0" />
           <inertia ixx="1.000000" ixy="0.000000" ixz="-0.000001"
                          iyy="0.000000" iyz="0.347906" izz="0.000001" />
        </inertial>
        <visual>
          <origin xyz="0 0 0"
                  rpy="0 0 0" />
          <geometry>
            <mesh filename="package://survo_description/meshes/wheel.stl" scale="0.001 0.001 0.001" />
          </geometry>
          <material name="DarkGrey" />
        </visual>
        <collision>
          <origin xyz="0 0 0"
                  rpy="0 0 ${M_PI/2}" />
          <geometry>
            <cylinder length="${wheel_width}"
                      radius="${wheel_radius}" />
          </geometry>
        </collision>
      </link>
      <gazebo reference="rear_right_wheel">
        <mu1 value="1.0" />
        <mu2 value="1.0" />
        <kp value="10000000.0" />
        <kd value="1.0" />
        <fdir1 value="1 0 0" />
        <material>Gazebo/DarkGrey</material>
        <turnGravityOff>false</turnGravityOff>
        <selfCollide>true</selfCollide>
      </gazebo>
      <joint name="rear_right_wheel_joint"
             type="continuous">
        <parent link="chassis_link" />
        <child link="rear_right_wheel" />
        <origin xyz="-0.1394 -0.23495 0.0183"
                rpy="${M_PI/2} 0 0" />
        <axis xyz="0 0 1"
              rpy="0 0 0" />
        <limit effort="100"
               velocity="100" />
        <joint_properties damping="0.0"
                          friction="0.0" />
      </joint>
</robot>
